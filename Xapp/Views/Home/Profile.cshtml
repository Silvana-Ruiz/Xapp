<!DOCTYPE html>

<!-- Importar CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
<link href="https://fonts.googleapis.com/css?family=Audiowide" rel="stylesheet">
<link href="~/XAPP_css/Profile.css" rel="stylesheet" type="text/css">

<!-- Sidebar -->
<div class="sidebar">
    <img src="https://drive.google.com/uc?export=view&id=17qRly_RNtO7moC4aSQkWyQjI5xKTv4Ft" id="logo">
    <a href="#Perfil" style="font-family: Poppins"> Perfil</a>
    <a href="#Feed" style="font-family: Poppins"> Feed</a>
    <a href="#XipeCoins" style="font-family: Poppins"> XipeCoins</a>
    <a href="#Calendar" style="font-family: Poppins"> Calendar</a>
</div>

<!-- Columnas 1 y 2 -->
<div class="container rounded bg-white mt-5 mb-5" style="font-family: Poppins">
    <div class="row">

        <!-- Columna 1 -->
        <!-- border-top border-bottom border-right border-left -->
        <div class="col-md-6" id="columna1">
            <div class="d-flex flex-column p-3 py-5">
                <div class="profile-pic">
                    <img src="https://www.business2community.com/wp-content/uploads/2017/08/blank-profile-picture-973460_640.png" id="photo" />
                    <input type="file" id="file">
                    <label for="file" id="uploadBtn" style="font-family: Poppins"> Cambiar Foto </label>
                </div>

                <h2 class="text-left" style="font-family: Poppins">Profile Picture</h2>
                <span> </span>
            </div>
        </div>

        <!-- Columna 2 -->
        <div class="d-flex flex-column col-md-6" id="columna2">
            <div class="p-1 py-5">
                <h2 class="d-flex justify-content-between align-items-center experience"><span>Skills</span> &nbsp;
                    <button class="btn btn-primary skill-button" type="button">Añadir Skill</button></h2><br>
            </div>
        </div>
    </div>
    
        <!-- Columnas 3 y 4 -->

  <div class="row">

                <!-- Columna 3 -->
                <div class="col-md-6" id="columna3">
                    <div class="d-flex flex-column p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h2 class="text-right" style="font-family: Poppins">Profile Settings</h2>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-12"><label class="labels">Nombre</label><input type="text" class="form-control" placeholder="Nombre" value=""></div><br>
                            <div class="col-md-12"><label class="labels">Apellido</label><input type="text" class="form-control" placeholder="Apellido" value=""></div><br>
                            <div class="col-md-12"><label class="labels">Área</label><input type="text" class="form-control" placeholder="Área" value=""></div><br>
                            <div class="col-md-12"><label class="labels">Teléfono</label><input type="tel" class="form-control" placeholder="XXX-XXXX-XXX" value=""></div><br>
                            <div class="col-md-12"><label class="labels">Email</label><input type="email" class="form-control" placeholder="ejemplo@ejemplo.com" value=""></div><br>
                            <div class="col-md-12"><label class="labels">Bio</label><textarea type="input-field" class="form-control" placeholder="Introduzca una descripcion" value="" style="height:200px"> </textarea></div><br>
                

                        </div>


                    </div>
                </div>
                <!-- Columna 4 -->
                <div class="col-md-6" id="columna4">
                    <div class="d-flex flex-column p-3 py-5">
                        <h2 class="text-left" style="font-family: Poppins">Resume</h2>
                        <input type="file" name="subir-pdf" accept="application/pdf,application/vnd.ms-excel" id="pdf"></input>

                        <div class="mt-5 text-right"><button class="btn btn-primary profile-button" type="button">Guardar Cambios</button></div>
                    </div>
                </div>



                <!-- PopUp -->
                <div class="modal-cont">
                    <div class="modal-box">
                        <span class="close">&times;</span>
                        <form action="" class="login-box">
                            <h1> Add Skill </h1>
                            <label for="">Name:</label>
                            <input type="text" class="nameskill" id="field1" required>
                            <label for="">Skill Level:</label>
                            <button class="btn btn-primary basic" type="button">Basic</button></label>
                            <button class="btn btn-primary medium" type="button">Medium</button></label>
                            <button class="btn btn-primary advanced" type="button">Advanced</button></label>
                            <button class="btn btn-primary expert" type="button">Expert</button></label>
                            <hr>
                            <label for="">Added Skills:</label>
                            <input type="text" id="field2" placeholder="" value="" readonly ><br>
                            <hr>
                            <button class="save-button">Save</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
</div>


<!-- Archivo de Javascript -->
<script src="~/XAPP_js/perfil_code.js"></script>